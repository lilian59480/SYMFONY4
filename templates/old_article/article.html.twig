{% extends "base.html.twig" %}

{% block body %}
<div class="container" id="article-{{ article.id }}">
    <h1 id="article_title">{{ article.title }}</h1>
    <p id="article_content">{{ article.content | raw }}</p>
    <div id="article_nbLike">
        <span class="pl-2">
            <span class="js-like-article-count">{{ article.nbLike }}</span>
            <a
                href="javascript:"
                class="js-like-article"
                data-url="{{ path('oldarticle_like', {"id":article.id}) }}">
                ‚ù§
            </a>
        </span>
    </div>
</div>
{% endblock %}

